<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.ControladoresCliente.InformacionImagenCliente"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #eaf2f8; -fx-padding: 20;">

    <VBox fx:id="contenedorPrincipal" spacing="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20">
        <HBox spacing="20" alignment="CENTER_LEFT">
            <ImageView fx:id="imagenAlojamiento" fitWidth="300" fitHeight="200" preserveRatio="true">
                <image>
                    <Image url="@Imagenes/expediav2-703354-2927a7-654387.png" />
                </image>
            </ImageView>

            <VBox spacing="10">
                <Label fx:id="lblNombre" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label fx:id="lblCiudad" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblTipo" style="-fx-font-size: 16px;"/>
                <Label fx:id="lblPrecio" style="-fx-font-size: 16px;"/>
            </VBox>
        </HBox>

        <Label fx:id="lblDescripcion" wrapText="true" style="-fx-font-size: 14px;"/>

        <Button fx:id="btnAgendar" text="Agendar Alojamiento" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 40;"/>
    </VBox>
</AnchorPane>