<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.ControladoresAdm.GestionOfertasAdmin">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Ofertas" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#btnAgregarOferta" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="+ Nueva Oferta" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tblOfertas">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="100" text="Código" />
                <TableColumn fx:id="colDescripcion" prefWidth="200" text="Descripción" />
                <TableColumn fx:id="colPorcentaje" prefWidth="100" text="Descuento (%)" />
                <TableColumn fx:id="colFechaInicio" prefWidth="120" text="Fecha Inicio" />
                <TableColumn fx:id="colFechaFin" prefWidth="120" text="Fecha Fin" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Eliminar" style="-fx-background-color: #d71414; -fx-text-fill: white;" onAction="#eliminarOferta" />
            <Button text="Actualizar" style="-fx-background-color: #0787ff; -fx-text-fill: white;" onAction="#actualizarOferta" />
        </HBox>
    </bottom>
</BorderPane>
