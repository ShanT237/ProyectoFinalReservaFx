<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="400.0"
            style="-fx-background-color: #fffaf0;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.Login">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="40" AnchorPane.bottomAnchor="40"
          AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30"
          style="-fx-background-color: #fffaf0;">

        <!-- Logo -->
        <ImageView fitHeight="80" fitWidth="180" preserveRatio="true">
            <image>
                <Image url="@../../../../../../../../../../../../Downloads/expediav2-703354-2927a7-654387.png"/>
            </image>
        </ImageView>

        <Label text="Iniciar Sesión"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4a7c91;"/>

        <!-- Formulario -->
        <GridPane hgap="12" vgap="18">
            <Label text="Correo electrónico:"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a7c91;"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtCorreo" promptText="ejemplo@dominio.com"
                       prefWidth="240"
                       style="-fx-background-radius: 8; -fx-border-radius: 8;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Contraseña:"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a7c91;"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <PasswordField fx:id="txtPassword" promptText="Ingresa tu contraseña"
                           prefWidth="240"
                           style="-fx-background-radius: 8; -fx-border-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints minWidth="240"/>
            </columnConstraints>
        </GridPane>

        <!-- Botón de ingreso -->
        <Button fx:id="btnIngresar"
                onAction="#iniciarSesion"
                text="Ingresar"
                style="-fx-background-color: #4a7c91; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 160; -fx-pref-height: 32;"/>

        <!-- Enlace recuperación -->
        <Hyperlink fx:id="linkRecuperar"
                   text="¿Olvidaste tu contraseña?"
                   style="-fx-text-fill: #4a7c91; -fx-underline: true;"/>

        <!-- Enlace de registro -->
        <Hyperlink fx:id="linkRegistro"
                   text="¿No tienes cuenta? Regístrate"
                   onAction="#irARegistro"
                   style="-fx-text-fill: #4a7c91; -fx-underline: true;"/>

        <!-- Mensaje de error -->
        <Label fx:id="lblMensajeError"
               style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
