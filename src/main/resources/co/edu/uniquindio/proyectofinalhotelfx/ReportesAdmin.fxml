<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controlador.ReportesAdmin"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Generar Reportes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="cbTipoReporte" promptText="Seleccionar reporte" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Reservas por período"/>
                    <String fx:value="Alojamientos más populares"/>
                    <String fx:value="Ingresos totales"/>
                </FXCollections>
            </items>
        </ComboBox>
        <DatePicker fx:id="dpFechaInicio" promptText="Fecha inicio"/>
        <DatePicker fx:id="dpFechaFin" promptText="Fecha fin"/>
        <Button fx:id="btnGenerar" text="Generar PDF" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="tblDatosReporte" style="-fx-background-color: white;"/>
</VBox>