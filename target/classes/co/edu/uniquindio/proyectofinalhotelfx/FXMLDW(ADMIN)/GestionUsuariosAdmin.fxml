<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.ControladoresAdm.GestionUsuariosAdmin">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Usuarios" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#eliminar" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="- Bloquear Usuario" textFill="#fff9f9" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tblUsuarios">
            <columns>
                <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colCedula" prefWidth="100" text="Cedula" />
                <TableColumn fx:id="coldCorreo" prefWidth="200" text="Correo" />
                <TableColumn fx:id="colTelefono" prefWidth="120" text="Teléfono" />
                <TableColumn fx:id="colActivo" prefWidth="150" text="Activo" />
            </columns>
        </TableView>
    </center>
</BorderPane>
