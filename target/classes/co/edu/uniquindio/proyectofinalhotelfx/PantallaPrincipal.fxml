<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #fffaf0;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.PantallaPrincipal">

    <!-- Barra superior -->
    <HBox spacing="20" alignment="CENTER_RIGHT"
          style="-fx-padding: 15; -fx-background-color: #dbe9f4;"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <ImageView fitHeight="50" fitWidth="120">
            <image>
                <Image url="@Imagenes/hotel.png"/>
            </image>
        </ImageView>
        <Button fx:id="btnLogin"
                style="-fx-background-color: transparent; -fx-text-fill: #4a7c91; -fx-font-weight: bold;"
                text="Iniciar Sesión"/>
        <Button fx:id="btnRegistro"
                style="-fx-background-color: transparent; -fx-text-fill: #4a7c91; -fx-font-weight: bold;"
                text="Registrarse"/>
    </HBox>

    <!-- Contenedor principal -->
    <VBox spacing="25" alignment="CENTER"
          AnchorPane.topAnchor="80" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="20">

        <Label text="Encuentra tu alojamiento ideal frente al mar"
               style="-fx-font-size: 20px; -fx-text-fill: #4a7c91; -fx-font-weight: bold;"/>

        <!-- Barra de búsqueda -->
        <HBox spacing="12" alignment="CENTER">
            <ComboBox fx:id="cbCiudad" prefWidth="160" promptText="Ciudad"
                      style="-fx-background-radius: 10;"/>
            <ComboBox fx:id="cbTipoAlojamiento" prefWidth="140" promptText="Tipo"
                      style="-fx-background-radius: 10;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Casa"/>
                        <String fx:value="Apartamento"/>
                        <String fx:value="Hotel"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="txtPrecioMax" prefWidth="120" promptText="Precio máximo"
                       style="-fx-background-radius: 10;"/>
            <Button fx:id="btnBuscar"
                    text="Buscar"
                    style="-fx-background-color: #4a7c91; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 6 16;"/>
        </HBox>

        <!-- Sección de alojamientos -->
        <Label text="Alojamientos destacados"
               style="-fx-font-size: 16px; -fx-text-fill: #4a7c91; -fx-font-weight: bold;"/>

        <ScrollPane fitToWidth="true"
                    style="-fx-background-color: white; -fx-background-radius: 10;">
            <FlowPane fx:id="flowAlojamientos" hgap="10" vgap="10" style="-fx-padding: 15;"/>
        </ScrollPane>
    </VBox>
</AnchorPane>
