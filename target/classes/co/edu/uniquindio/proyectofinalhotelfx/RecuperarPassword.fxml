<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #fffaf0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalhotelfx.Controladores.RecuperarPassword">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #fffaf0;" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="40">

        <!-- Título -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4a7c91;" text="Recuperar Contraseña" />

        <!-- Formulario -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #4a7c91;" text="Correo electrónico:" />
        <TextField fx:id="txtCorreo" prefWidth="240" promptText="ejemplo@dominio.com" style="-fx-background-radius: 8; -fx-border-radius: 8;" />

        <!-- Botón de recuperación -->
        <Button onAction="#recuperarContrasena" style="-fx-background-color: #4a7c91; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 160; -fx-pref-height: 32;" text="Recuperar Contraseña" />

        <!-- Mensaje de error o éxito -->
        <Label fx:id="lblMensajeError" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />

    </VBox>

</AnchorPane>